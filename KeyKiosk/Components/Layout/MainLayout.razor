@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Nav

<div class="layout-shell">
    @if (!IsLoginPage)
    {
        <!-- Top navigation bar -->
        <header class="top-nav">
            <nav class="nav-container">
                @if (IsAdminPage)
                {
                    <!-- ADMIN NAV -->
                    <div class="nav-left">
                        <NavLink href="/employee/admin/home" class="nav-link" Match="NavLinkMatch.All">Admin Home</NavLink>
                        <NavLink href="/employee/admin/users" class="nav-link">Employees</NavLink>
                        <NavLink href="/employee/home" class="nav-link">Work Orders</NavLink>
                        <NavLink href="/employee/admin/WorkOrderTaskTemplates" class="nav-link">Templates</NavLink>
                    </div>

                    <div class="nav-center">
                        <img src="/images/KEYOSK_icon.png" alt="KeyOSk Logo" class="nav-logo" />
                    </div>

                    <div class="nav-right">
                        <NavLink href="/employee/home" class="nav-link">Employee View</NavLink>
                    </div>
                }
                else
                {
                    <!-- EMPLOYEE NAV -->
                    <div class="nav-left">
                        <NavLink href="/employee/home" class="nav-link" Match="NavLinkMatch.All">Home</NavLink>
                    </div>

                    <div class="nav-center">
                        <img src="/images/KEYOSK_icon.png" alt="KeyOSk Logo" class="nav-logo" />
                    </div>

                    <div class="nav-right">
                        <button class="btn-primary" @onclick="OpenCreateFromNav">New Work Order</button>
                    </div>
                }
            </nav>
        </header>
    }

    <!-- Page content area -->
    <main class="page-body">
        <article class="content px-4">
            @Body

            <br /><br />
            <Toast />
        </article>
    </main>
</div>

@code {
    private bool IsLoginPage => Nav.Uri.Contains("/employee/login", StringComparison.OrdinalIgnoreCase);

    // Treat any page under /employee/admin/ as "admin mode"
    private bool IsAdminPage => Nav.Uri.Contains("/employee/admin/", StringComparison.OrdinalIgnoreCase);

    private void OpenCreateFromNav()
    {
        Nav.NavigateTo("/employee/home");
    }
}
