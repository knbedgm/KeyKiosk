@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Nav

<div class="layout-shell">
    <!-- Horizontal top navbar -->
    <header class="top-nav">
        <nav class="nav-container">
            <div class="nav-left">
                <NavLink href="employee/home" class="nav-link" Match="NavLinkMatch.All">Home</NavLink>
            </div>

            <div class="nav-center">
                <img src="/images/KEYOSK_icon.png" alt="KeyOSk Logo" class="nav-logo" />
            </div>

            <div class="nav-right">
                <button class="btn-primary" @onclick="OpenCreateFromNav">New Work Order</button>
            </div>
        </nav>
    </header>

    @* <!-- (optional) tiny utility row -->
    <div class="top-row px-4 util-bar">
        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
    </div> *@

    <!-- Constrained content area -->
    <main class="page-body">
        <article class="content px-4">
            @Body

            <br /><br />
            <Toast />
        </article>
    </main>
</div>

@code {
    private void OpenCreateFromNav()
    {
        Nav.NavigateTo("/employee/home?new=true");
    }
}
