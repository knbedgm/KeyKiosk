@page "/employee/login"
@rendermode InteractiveServer
@layout Layout.MainLayout

@inject NavigationManager Nav

<link href="EmployeeLogin.css" rel="stylesheet" />
<link href="DesktopShared.css" rel="stylesheet" />

<PageTitle>Employee Login</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h1>Employee Login</h1>

        <EditForm Model="@loginModel" OnValidSubmit="OnLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="username">Username</label>
                <InputText id="username" @bind-Value="loginModel.Username" class="input-field" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" type="password" @bind-Value="loginModel.Password" class="input-field" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <p class="error-message">@errorMessage</p>
            }

            <button type="submit" class="btn-primary login-btn">Login</button>
        </EditForm>

        <p class="login-footer">
            © @DateTime.Now.Year KeyOSk | Secure Access Portal
        </p>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;

    private void OnLogin()
    {
        var username = loginModel.Username?.Trim();
        var password = loginModel.Password?.Trim();

        // --- Hardcoded logins ---
        if (username == "Rachel" && password == "123123")
        {
            Nav.NavigateTo("/employee/admin/home", forceLoad: true);
        }
        else if (username == "Ryan" && password == "123123")
        {
            Nav.NavigateTo("/employee/home", forceLoad: true);
        }
        else
        {
            errorMessage = "Invalid username or password.";
        }
    }

    public class LoginModel
    {
        public string Username { get; set; } = "";
        public string Password { get; set; } = "";
    }
}
